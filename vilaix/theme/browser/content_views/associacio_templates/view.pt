<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="serveiesports">

<body class="associacio">

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">
      <head>
          <style type="text/css">
            .greyback {
                background: none repeat scroll 0 0 #F5F5F5;
                margin-bottom: 20px;
                padding: 25px 20px 20px 30px;}
          </style>
      </head>

      <div id="viewlet-above-content-title" tal:content="structure provider:plone.abovecontenttitle" tal:condition="not:ajax_load" />

    	<h1 class="documentFirstHeading" tal:content="context/Title" />
	    <div id="viewlet-below-content-title" tal:content="structure provider:plone.belowcontenttitle" tal:condition="not:ajax_load" />
	    <div class="documentDescription description"  tal:content="context/Description"></div>
	     <div id="viewlet-above-content-body" tal:content="structure provider:plone.abovecontentbody" tal:condition="not:ajax_load" />

      <div id="content-core"
          tal:define="horari context/horari;
                      mes_informacio context/mes_informacio;
                      tipus context/tipus;
                      adreca_contacte context/adreca_contacte;
                      codi_postal context/codi_postal;
                      poblacio context/poblacio;
                      latitude context/latitude;
                      longitude context/longitude;
                      telefon context/telefon;
                      adreca_correu context/adreca_correu;">
       	<div id="associacio">
          <div class="row-fluid">
            <div class="span12">
          	  <img tal:define="imatge view/getImage" tal:condition="imatge" tal:attributes="src string:${imatge}" />
            	<div class="greyback row-fluid span12">
                <div class="span6">
                  <tal:block tal:condition="tipus">
  	            		<label class="horizontal"> Tipus associació </label>
  		            	<p><span tal:content="tipus"></span></p>
                  </tal:block>

                  <tal:tipus tal:condition="adreca_contacte">
  		            	<label class="horizontal"> Adreça de contacte </label>
  		            	<p><span tal:content="adreca_contacte"></span></p>
                  </tal:tipus>

                  <tal:block tal:condition="codi_postal">
  		            	<label class="horizontal"> Codi Postal </label>
          			    <p><span tal:content="codi_postal"></span></p>
                  </tal:block>

                  <tal:block tal:condition="poblacio">
  						      <label class="horizontal"> Població </label>
  		            	<p><span tal:content="poblacio"></span></p>
                  </tal:block>

                </div>

                <div class="span6">

                  <tal:block tal:condition="python: latitude and longitude">
                    <label class="horizontal"> Geolocalització </label>
                    <p>
                      <span tal:content="latitude"></span> /
                      <span tal:content="longitude"></span>
                    </p>
                  </tal:block>

                  <tal:block tal:condition="telefon">
  		            	<label class="horizontal"> Telèfon </label>
  		            	<p><span tal:content="telefon"></span></p>
                  </tal:block>

                  <tal:block tal:condition="adreca_correu">
  		            	<label class="horizontal"> Adreça de correu </label>
  		            	<p><span tal:content="adreca_correu"></span></p>
                  </tal:block>

		            	<tal:horari tal:condition="horari">
                    <label class="horizontal"> Horari </label>
  		            	<p><span tal:content="horari"></span></p>
                  </tal:horari>

 					      </div>
              </div>
              <div class="clearfix"></div>
              <div tal:condition="mes_informacio">
                <label class="horizontal"> Més informació </label>
                <p tal:replace="structure context/mes_informacio/raw"></p>
              </div>
111 --- <span tal:content="context/geolocalitzacio"></span> <br/>
111 --- <span tal:content="context/latitude"></span> <br/>
111 --- <span tal:content="context/longitude"></span> <br/>
            	<label class="horizontal"> Ubicació </label>
    			     <p tal:replace="structure view/getMapa"></p>

            </div>
          </div>
        </div>
      </div>

      <div id="viewlet-below-content-body" tal:content="structure provider:plone.belowcontentbody" tal:condition="not:ajax_load" />

    </tal:main-macro>

</metal:main>

</body>
</html>
